<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvColour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="20dp"
        android:text="@string/string_please_select_a_colour"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_BTN"
        app:layout_constraintStart_toStartOf="@+id/tvColour">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ib_Blue"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_blue"
                android:contentDescription="Blue Background"
                android:tag="0"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="16dp" />


            <ImageButton
                android:id="@+id/ib_Orange"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_orange"
                android:tag="1"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/ib_LTGreen"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_ltgreen"
                android:tag="2"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ib_Red"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:tag="3"
                android:background="@drawable/button_red"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/ib_Green"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:tag="4"
                android:background="@drawable/button_green"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="16dp" />

            <ImageButton
                android:id="@+id/ib_Yellow"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_yellow"
                android:tag="5"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ib_Grey"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_grey"
                android:tag="6"
                tools:ignore="SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="16dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/confirm_BTN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="104dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>