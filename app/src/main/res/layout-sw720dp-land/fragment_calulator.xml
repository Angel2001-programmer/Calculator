<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculator.CalculatorFragment">

    <EditText
        android:id="@+id/editTextResults5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="number|numberDecimal"
        android:minHeight="48dp"
        android:textAlignment="textEnd"
        android:textSize="85sp"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout5"
        app:layout_constraintStart_toStartOf="@+id/tableLayout12"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/text_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <TableLayout
        android:id="@+id/tableLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/editTextResults5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:text="AC"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="+"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="-"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custombutton"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="X"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:text="9"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp"

                />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:text="8"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp"


                />

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:text="7"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp"


                />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custombutton"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="6"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp"

                />


        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout12"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/tableLayout12">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="5"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp"

                />

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="4"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp"

                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:text="3"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp"

                />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custombutton"
                android:text="รท"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp"


                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="2"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:text="1"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/custombutton"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="0"
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custombutton"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"

                android:text="."
                android:textColor="?android:textColorPrimary"
                android:textSize="75sp" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_span="4"
        android:background="@drawable/custombutton"
        android:text="="
        android:textColor="?android:textColorPrimary"
        android:textSize="75sp"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout5"
        app:layout_constraintStart_toStartOf="@+id/tableLayout12"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout12" />

</androidx.constraintlayout.widget.ConstraintLayout>